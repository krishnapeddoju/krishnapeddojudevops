
<link href="/Content/Styles/font-awesome.min.css" rel="stylesheet" />
@model PortKonnect.UserAccessManagement.Domain.DTOS.UserDTO

@{
    ViewBag.Title = "Reset Password";
}



@using (Html.BeginForm())
{
    <div class="page-header">
        <h1>&nbsp;</h1>
    </div>
    <div class="row">
       
            <div class="col-md-6 col-md-push-3 col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Reset Password</h3>
                    </div>
                    <div class="panel-body">
                    <div class="form-group">
                        <label for="First" style="display:none;">Username</label>
                        <div class="input-icon">
                            <i class="fa fa-user"></i>
                            <input required id="username" class="form-control placeholder-no-fix" style="height: 30px;" type="text" autocomplete="off" placeholder="Username" name="username" autofocus ng-model="model.username" />
                        </div>

                        @*@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", required = "required" })*@
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Reset Password</button>
                    </div>
                    @Html.ActionLink("Back to Login", "BackToLogin", "UserAccount", new { signin = @ViewBag.signin }, new { @class = "navbar-brand-login" })
                </div>
                </div>
            </div>
        </div>

}
