@using PortKonnect.UserAccessManagement.WebApp
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Cargo</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockoutScriptsJs")
    <script src="~/Scripts/Application/eGateRoot.js"></script>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("e-Xpressway Home", "FormBuilderTemplate", "FormBuilder")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
    </header>
    <div id="body">
        <script>
            eGateRoot.rootPath = '@Url.Content("~")';
            var application = {viewbag : @Helpers.ToJson(Html, ViewBag)};
            jQuery(document).ready(function () {
                //App.init();
                @RenderSection("ko_apply", required: false);
            });
        </script>
        <table>
            <tr>
                <td style="vertical-align: top;">
                    <div id='cssmenu'>
                        <ul>
                            <li class='active'><a href='#'><span>Home</span></a></li>
                            <li class='has-sub'><a href='#'><span>Vessel Voyage</span></a>
                                <ul>
                                    <li><a href='#'>@Html.ActionLink("Lookup", "List", "Lookup")</a></li>
                                    <li><a href='#'><span>Form Fields</span></a></li>
                                    <li><a href='#'><span>@Html.ActionLink("Form", "List", "Form")</span></a></li>
                                    <li><a href='#'><span>Entity Form</span></a></li>
                                    <li><a href='#'><span>Form Fields Relation</span></a></li>
                                    <li class='last'><a href='#'><span>Form Data</span></a></li>
                                </ul>
                            </li>
                            <li class='last'>@Html.ActionLink("Form Builder", "FormBuilderTemplate", "FormBuilder")</li>
                        </ul>
                    </div>
                </td>
                <td>@RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
                </td>
            </tr>
        </table>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - e-Xpressway</p>
            </div>
        </div>
    </footer>
    @RenderSection("JavaScript", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
